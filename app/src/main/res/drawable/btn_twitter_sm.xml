<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <gradient android:startColor="#4898fa"
                android:endColor="#3b6bc4" android:angle="270" />
        </shape>
    </item>
    <item>
        <shape>
            <solid
                android:color="#4898fa"></solid>
            <size android:height="10dp" android:width="200dp"></size>
        </shape>
    </item>
</selector>